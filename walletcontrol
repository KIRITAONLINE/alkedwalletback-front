        switch (action) {
            case "deposit":
                // Lógica para manejar la solicitud de depósito
                break;
            case "withdraw":
                // Lógica para manejar la solicitud de retiro
                break;
            case "transfer":
                // Lógica para manejar la solicitud de transferencia
                break;
            default:
                // Acción desconocida, manejar de acuerdo a tus necesidades
        }
    }
}
